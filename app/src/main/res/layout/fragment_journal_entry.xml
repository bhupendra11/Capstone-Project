<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:id="@+id/content_journal_entry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="quickjournal.bhupendrashekhawat.me.android.quickjournal.JournalEntryActivityFragment"
    tools:showIn="@layout/activity_journal_entry"
    android:orientation="vertical">


    <android.support.v4.widget.Space
        android:layout_width="1dp"
        android:layout_height="5dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/sample_quote"
        android:id="@+id/quote_textview"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="28sp"
        android:layout_gravity="center"
        />
    <android.support.v4.widget.Space
        android:layout_width="1dp"
        android:layout_height="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/grateful_header_text"
        android:id="@+id/grateful_textview"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <include
        android:id="@+id/grateful_editext"
        layout="@layout/edit_text_with_numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <android.support.v4.widget.Space
        android:layout_width="1dp"
        android:layout_height="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/things_to_make_today_great_header_text"
        android:id="@+id/make_today_great_textview"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />



    <include
    android:id="@+id/today_great_editext"
    layout="@layout/edit_text_with_numbers"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

    <android.support.v4.widget.Space
        android:layout_width="1dp"
        android:layout_height="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/my_affirmations_header_text"
        android:id="@+id/my_affirmations_textview"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <EditText
        android:id="@+id/affirmations_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="2"
        android:hint="Here..."/>

    <android.support.v4.widget.Space
        android:layout_width="1dp"
        android:layout_height="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/amazing_things_header_text"
        android:id="@+id/amazing_things_happened_textview"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />



    <include
    android:id="@+id/amazing_editext"
    layout="@layout/edit_text_with_numbers"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

    <android.support.v4.widget.Space
        android:layout_width="1dp"
        android:layout_height="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/make_today_even_better_header_text"
        android:id="@+id/made_today_better_textview"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <EditText
        android:id="@+id/made_today_better_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="2"
        android:hint="Here ..."/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/sampleImageView"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/journal_entry_images_container"
        android:visibility="gone"
        android:fillViewport="false"
        android:scrollbarSize="3dp"
        android:background="#e9e9e9"
        >

        <LinearLayout
            android:id="@+id/images_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:clipChildren="false"
            android:orientation="horizontal"



            />


    </HorizontalScrollView>

</LinearLayout>
</ScrollView>

